<header>
    <%= render 'shared/navbar' %>
    <h1>La grande Hélène <br> <span>[ Portfolio Gallery ]</span></h1>
</header>


<div class="cardcarousel m-0 p-3">
  <div id="carouselExampleControls" class="carousel slide p-3" data-ride="carousel">
    <div class="carousel-inner p-3">
      <div class="carousel-item active">
        <img id="imgcarousel" src="https://images.unsplash.com/photo-1496747611176-843222e1e57c?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img id="imgcarousel" src="https://images.unsplash.com/photo-1482270406631-a02c51d93c2f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1562&q=80" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img id="imgcarousel" src="https://images.unsplash.com/photo-1562373353-7db88744f982?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1496&q=80" class="d-block w-100" alt="...">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>


<div id="all-cards">
  <div class="row justify-content-start m-0 p-3">
    <% @creations.reverse.each do |creation| %>
        <div class="col-12 col-md-4 col-lg-3 p-3">
          <div class="card card-transition">
              <div class="card-image">
                <% if creation.avatar.attached? %>
                  <img src="<%= (url_for(creation.avatar)) %>" alt="Orange" />
                    <% else %>
                  <img src="https://images.unsplash.com/photo-1515372039744-b8f02a3ae446?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=934&q=80"  />
                <% end %>
              </div>
            <div class="card-body p-3">
              <div class="card-date">
                  <%= creation.nom %>
              </div>
              <div class="card-title">
                  <h3><%= creation.description %></h3>
              </div>
              <div class="card-excerpt">
                  <p>Difficulté: <%= creation.difficulte %>
                  </p>
                      <%= link_to creation.nom, creation_path(creation) %>
                  </p>
              </div>
            </div>
          </div>
      </div>
    <% end %>
  </div>
</div>


