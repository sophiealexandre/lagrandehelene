<h1>Nouvelle Création</h1>
<p>Parce qu'Hélène est très créative!</p>


<%= form_for(@creation) do |f| %>
  <%= f.label :nom %>
  <%= f.text_field :nom %> <br>
  <%= f.label :description %>
  <%= f.text_field :description %> <br>
  <%= f.label :difficulte %>
  <%= f.number_field :difficulte %> <br>
  <%= f.label "Profile Photo" %>
  <%= f.file_field :avatar, as: :file %> <br>
  <%= f.submit %>
<% end %>

